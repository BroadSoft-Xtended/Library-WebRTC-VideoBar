.bdsft-webrtc
  .videoBar
    position relative
    top 0px
    left 0px
    width 100%
    height 40px
    background black
    background-image -ms-linear-gradient(center top , #404040, #000000)
    background-image linear-gradient(to bottom, #404040, #000000)
    background-image -webkit-linear-gradient(#404040, #000000)
    background-image -moz-linear-gradient(top, #404040, #000000)
    border-radius 4px
    border 2px solid #DDDDDD
    box-shadow 0px 0px 10px #000000
    margin-top 5px
    background-image none
    border-radius 0px
    border none
    box-shadow none
    margin-top 0px
    background #292929
    border-top 1px solid #3c3c3c
    .icon
      margin 0px 2.5px
      position absolute
    .table
      height 100%
      margin 6px
      margin 0
    .cell
      position relative
      top 0px
      left 0px
      width 35px
      width 36px
      .icon
        width 100%
        text-align center
        margin-top 10px
        margin-right 0
        margin-left 0
        a
          margin 0
      &:first-child
        padding 0
    span
      color grey
    .unmuteAudio
      margin-top -1px
    .leftSpacer
      width 8px
    .cell-hangup
      width 42px
    .subtitle
      display none
    .timerHolder
      position relative
      top 0
      left 0
      width auto
    .rightSpacer
      width 8px

    &._960x720
      width 960px

    &._640x360, &._640x480
      width 640px

    &._320x180, &._320x240
      width 320px

    &._1280x720, &.hd
      width 1280px
      
    &._1920x1080
      width 1920px

    .hangup, .fullScreen, .selfView, .mute, .dialpadIcon, .messages
      top 0
      left 0

    &:not(.sendVideo):not(.receiveVideo)
      display inline-block
      width auto
      
    &:not(.sendVideo):not(.receiveVideo)
      .table
        table-layout auto
        width auto
      .cell-hangup
        width 35px !important
        
    &.conference
      .cell-hangup
        width 30px !important
        top 2px
      .cell
        .hangup
          margin-top 0
          width 140px
          background-color red
          border-radius 5px
          margin-left 10px
          height 36px
          line-height 14px
      .hangup
        .subtitle
          display block !important
          font-size 14px
          color white

    & .icon
    & a
      font-size 20px
      color grey
      text-decoration none

    & .hold
    & .resume
      margin-top -1px

    & .settings
      margin-top 12px !important
      .icon-settings
        margin 0
        font-size 18px
        color #FFF

    &.fullscreen-shown
      top auto !important
      bottom 0px
      position absolute
      width 100%

    &.conference .icon-hangup:before
    &.conference .icon-hangup:hover:before
      color white !important

    &.conference .selfViewHide
    &.conference .selfViewShow
      text-align right !important

    &.conference .fullscreenExpand
    &.conference .fullscreenContract
      text-align left !important

    &:not(.sendVideo):not(.receiveVideo) .fullscreenHolder
      display none !important

    &.selfViewShow a
    &.dialpadHide a
    &.unmuteAudio a
    &.fullscreenContract a
      color #04AFF0 !important

    &:not(.held).enableHold.started .hold,
    &.enableHold.held .resume
      display block
      opacity 1
      z-index 20
      
    &.held .hold, 
    &:not(.started) .hold,
    &:not(.started) .resume,
    &:not(.held) .resume
      display none

    &.started .hangup, 
    &.calling .hangup
    &.enableSettings .settings,
    &.enableSelfView:not(.showLocal) .selfViewShow,
    &.enableSelfView.showLocal .selfViewHide,
    &.enableTransfer.started .transfer,
    &.enableCallControl.callcontrol-shown .dialpadHide,
    &.enableCallControl:not(.callcontrol-shown) .dialpadShow
      {fadeIn}

    &.connected .hangup, 
    &.disconnected .hangup,
    &:not(.enableSettings) .settings,
    &.enableSelfView.showLocal .selfViewShow,
    &.enableSelfView:not(.showLocal) .selfViewHide,
    &.enableTransfer.connected .transfer, 
    &.enableTransfer.disconnected .transfer,
    &.enableCallControl:not(.callcontrol-shown) .dialpadHide,
    &.enableCallControl.callcontrol-shown .dialpadShow
      {fadeOut}  

    &:not(.enableTransfer) .cell-transfer,
    &:not(.enableHold) .cell-hold,
    &:not(.enableCallTimer) .cell-timer,
    &:not(.enableSelfView) .cell-selfView,
    &:not(.enableSettings) .cell-settings,
    &:not(.enableCallControl) .cell-dialpad,
    &:not(.enableMute) .muteHolder,
    &:not(.enableCallTimer) .timerHolder,
    &:not(.enableFullscreen) .fullscreenHolder
      display none !important