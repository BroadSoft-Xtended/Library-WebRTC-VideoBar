.bdsft-webrtc
  .videoBar
    position relative
    top 0px
    left 0px
    width 100%
    height 40px
    background black
    background-image -ms-linear-gradient(center top , #404040, #000000)
    background-image linear-gradient(to bottom, #404040, #000000)
    background-image -webkit-linear-gradient(#404040, #000000)
    background-image -moz-linear-gradient(top, #404040, #000000)
    border-radius 4px
    border 2px solid #DDDDDD
    box-shadow 0px 0px 10px #000000
    margin-top 5px
    background-image none
    border-radius 0px
    border none
    box-shadow none
    margin-top 0px
    background #292929
    border-top 1px solid #3c3c3c
    .icon
      margin 0px 2.5px
      position absolute
    .table
      height 100%
      margin 6px
      margin 0
    .cell
      position relative
      top 0px
      left 0px
      width 35px
      width 36px
      .icon
        width 100%
        text-align center
        margin-top 10px
        margin-right 0
        margin-left 0
        a
          margin 0
      &:first-child
        padding 0
    span
      color grey
    .unmuteAudio
      margin-top -1px
    .leftSpacer
      width 8px
    .cell-hangup
      width 42px
    .subtitle
      display none
    .timerHolder
      position relative
      top 0
      left 0
      width auto
    .rightSpacer
      width 8px

    &._960x720
      width 960px

    &._640x360, &._640x480
      width 640px

    &._320x180, &._320x240
      width 320px

    &._1280x720, &.hd
      width 1280px

  .hangup, .fullScreen, .selfView, .mute, .dialpadIcon, .messages
    top 0
    left 0

  #videoBar
    #settings
      width auto
      background-color transparent

  .videoBar.audioOnly
    display inline-block
    width auto
    
  .videoBar.audioOnly
    .table
      table-layout auto
      width auto
    .cell-hangup
      width 35px !important
      
  .videoBar.conference
    .cell-hangup
      width 30px !important
      top 2px
    .cell
      .hangup
        margin-top 0
        width 140px
        background-color red
        border-radius 5px
        margin-left 10px
        height 36px
        line-height 14px
    .hangup
      .subtitle
        display block !important
        font-size 14px
        color white

        
  .videoBar .icon, .videoBar a
    font-size 20px
    color grey
    text-decoration none

  .videoBar .hold, .videoBar .resume
    margin-top -1px

  .videoBar .settings
    margin-top 12px !important
    .icon-settings
      margin 0
      font-size 18px
      color #FFF

  .videoBar.fullscreen-shown
    top auto !important
    bottom 0px
    position absolute
    width 100%

  .videoBar.conference .icon-hangup:before, 
  .videoBar.conference .icon-hangup:hover:before
    color white !important

  .videoBar.conference .selfViewHide, 
  .videoBar.conference .selfViewShow
    text-align right !important

  .videoBar.conference .fullscreenExpand, 
  .videoBar.conference .fullscreenContract
    text-align left !important

  .videoBar.audioOnly .fullscreenExpand, 
  .videoBar.audioOnly .fullscreenContract,
  .videoBar.audioOnly .selfViewHide, 
  .videoBar.audioOnly .selfViewShow, 
  .videoBar.audioOnly .cell-fullScreen, 
  .videoBar.audioOnly .cell-selfView
    display none !important

  .videoBar.selfViewShow a, 
  .videoBar.dialpadHide a,
  .videoBar.unmuteAudio a,
  .videoBar.fullscreenContract a
    color #04AFF0 !important

  .videoBar.started .hangup, 
  .videoBar.calling .hangup
  .videoBar:not(.held).enableHold.started .hold,
  .videoBar.enableHold.held .resume,
  .videoBar.enableSettings .settings,
  .videoBar.enableSelfView:not(.video-hidden) .selfViewHide,
  .videoBar.enableSelfView.video-hidden .selfViewShow,
  .videoBar.enableTransfer.started .transfer,
  .videoBar.enableCallControl.callcontrol-shown .dialpadHide,
  .videoBar.enableCallControl:not(.callcontrol-shown) .dialpadShow,
  .videoBar.enableFullscreen:not(.fullscreen-shown) .fullscreenExpand,
  .videoBar.enableFullscreen.fullscreen-shown .fullscreenContract
    {fadeIn}

  .videoBar.connected .hangup, 
  .videoBar.disconnected .hangup,
  .videoBar.held .hold, 
  .videoBar:not(.started) .hold,
  .videoBar:not(.started) .resume,
  .videoBar:not(.held) .resume, 
  .videoBar:not(.enableSettings) .settings,
  .videoBar.enableSelfView.video-hidden .selfViewHide,
  .videoBar.enableSelfView:not(.video-hidden) .selfViewShow,
  .videoBar.enableTransfer.connected .transfer, 
  .videoBar.enableTransfer.disconnected .transfer,
  .videoBar.enableCallControl:not(.callcontrol-shown) .dialpadHide,
  .videoBar.enableCallControl.callcontrol-shown .dialpadShow,
  .videoBar.enableFullscreen.fullscreen-shown .fullscreenExpand,
  .videoBar.enableFullscreen:not(.fullscreen-shown) .fullscreenContract
    {fadeOut}  

  .videoBar:not(.enableTransfer) .cell-transfer,
  .videoBar:not(.enableHold) .cell-hold,
  .videoBar:not(.enableCallTimer) .cell-timer,
  .videoBar:not(.enableFullscreen) .cell-fullScreen,
  .videoBar:not(.enableSelfView) .cell-selfView,
  .videoBar:not(.enableSettings) .cell-settings,
  .videoBar:not(.enableCallControl) .cell-dialpad
    display none !important