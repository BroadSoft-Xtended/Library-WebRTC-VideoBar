@import 'node_modules/webrtc-core/styles/variables'
@import 'node_modules/webrtc-core/styles/icons'

.bdsft-client
  .videoBar
    position relative
    top 0px
    left 0px
    width 100%
    height 40px
    background black
    background-image -ms-linear-gradient(center top , #404040, #000000)
    background-image linear-gradient(to bottom, #404040, #000000)
    background-image -webkit-linear-gradient(#404040, #000000)
    background-image -moz-linear-gradient(top, #404040, #000000)
    border-radius 4px
    border 2px solid #DDDDDD
    box-shadow 0px 0px 10px #000000
    margin-top 5px
    background-image none
    border-radius 0px
    border none
    box-shadow none
    margin-top 0px
    background #292929
    border-top 1px solid #3c3c3c
    .icon
      margin 0px 2.5px
      position absolute
    .table
      height 100%
      margin 6px
      margin 0
    .cell
      position relative
      top 0px
      left 0px
      width 35px
      width 36px
      .icon
        width 100%
        text-align center
        margin-top 10px
        margin-right 0
        margin-left 0
        a
          margin 0
      &:first-child
        padding 0
    span
      color grey
    .unmuteAudio
      margin-top -1px
    .leftSpacer
      width 8px
    .cell-hangup
      width 42px
    .subtitle
      display none
    .cellTimer
      position relative
      top 0
      left 0
      width auto
    .rightSpacer
      width 8px

  .hangup, .fullScreen, .selfView, .muteAudioIcon, .dialpadIcon, .messages
    top 0
    left 0

  #videoBar
    #settings
      width auto
      background-color transparent

  .videoBar.audioOnly
    display inline-block
    width auto
    
  .videoBar.audioOnly
    .table
      table-layout auto
      width auto
    .cell-hangup
      width 35px !important
      
  .videoBar.conference
    .cell-hangup
      width 30px !important
      top 2px
    .cell
      .hangup
        margin-top 0
        width 140px
        background-color red
        border-radius 5px
        margin-left 10px
        height 36px
        line-height 14px
    .hangup
      .subtitle
        display block !important
        font-size 14px
        color white

        
  .videoBar .icon, .videoBar a
    font-size 20px
    color grey
    text-decoration none

  .videoBar .hold, .videoBar .resume
    margin-top -1px

  .videoBar .settings
    margin-top 12px !important
    .icon-settings
      margin 0
      font-size 18px
      color #FFF

  .videoBar.fullscreen-shown
    top auto !important
    bottom 0px
    position absolute

  .videoBar.conference .icon-hangup:before, 
  .videoBar.conference .icon-hangup:hover:before
    color white !important

  .videoBar.conference .selfViewDisable, 
  .videoBar.conference .selfViewEnable
    text-align right !important

  .videoBar.conference .fullScreenExpand, 
  .videoBar.conference .fullScreenContract
    text-align left !important

  .videoBar.audioOnly .fullScreenExpand, 
  .videoBar.audioOnly .fullScreenContract,
  .videoBar.audioOnly .selfViewDisable, 
  .videoBar.audioOnly .selfViewEnable, 
  .videoBar.audioOnly .cell-fullScreen, 
  .videoBar.audioOnly .cell-selfView
    display none !important

  .videoBar.selfViewEnable a, 
  .videoBar.dialpadIconHide a,
  .videoBar.unmuteAudio a,
  .videoBar.fullScreenContract a
    color #04AFF0 !important

  .videoBar.started .hangup, 
  .videoBar.calling .hangup
  .videoBar:not(.held).enableHold.started .hold,
  .videoBar.enableHold.started.held .resume,
  .videoBar.enableSettings .settings,
  .videoBar.enableSelfView:not(.video-hidden) .selfViewDisable,
  .videoBar.enableSelfView.video-hidden .selfViewEnable,
  .videoBar.enableTransfer.started .transfer,
  .videoBar.enableDialpad.callcontrol-shown .dialpadIconHide,
  .videoBar.enableDialpad:not(.callcontrol-shown) .dialpadIconShow,
  .videoBar.enableFullScreen:not(.fullscreen-shown) .fullScreenExpand,
  .videoBar.enableFullScreen.fullscreen-shown .fullScreenContract,
  .videoBar.enableMute:not(.sound-hidden).started .muteAudioIcon,
  .videoBar.enableMute.sound-hidden.started .unmuteAudioIcon,
  .videoBar.enableShareScreen:not(.screenshare-shown) .shareScreen,
  .videoBar.enableShareScreen.screenshare-shown .stopShareScreen
    {fadeIn}

  .videoBar.connected .hangup, 
  .videoBar.disconnected .hangup,
  .videoBar.held .hold, 
  .videoBar:not(.started) .hold,
  .videoBar:not(.held) .resume, 
  .videoBar:not(.started) .resume,
  .videoBar:not(.enableSettings) .settings,
  .videoBar.enableSelfView.video-hidden .selfViewDisable,
  .videoBar.enableSelfView:not(.video-hidden) .selfViewEnable,
  .videoBar.enableTransfer.connected .transfer, 
  .videoBar.enableTransfer.disconnected .transfer,
  .videoBar.enableDialpad:not(.callcontrol-shown) .dialpadIconHide,
  .videoBar.enableDialpad.callcontrol-shown .dialpadIconShow,
  .videoBar.enableFullScreen.fullscreen-shown .fullScreenExpand,
  .videoBar.enableFullScreen:not(.fullscreen-shown) .fullScreenContract,
  .videoBar.enableShareScreen.screenshare-shown .shareScreen, 
  .videoBar.enableShareScreen:not(.screenshare-shown) .stopShareScreen,
  .videoBar.enableMute:not(.started) .muteAudioIcon, 
  .videoBar.enableMute:not(.started) .unmuteAudioIcon,
  .videoBar.enableMute.sound-hidden.started .muteAudioIcon, 
  .videoBar.enableMute:not(.sound-hidden).started .unmuteAudioIcon
    {fadeOut}  

  .videoBar:not(.enableMute) .cell-muteAudio,
  .videoBar:not(.enableTransfer) .cell-transfer,
  .videoBar:not(.enableHold) .cell-hold,
  .videoBar:not(.enableCallTimer) .cell-timer,
  .videoBar:not(.enableFullScreen) .cell-fullScreen,
  .videoBar:not(.enableSelfView) .cell-selfView,
  .videoBar:not(.enableSettings) .cell-settings,
  .videoBar:not(.enableDialpad) .cell-dialpad,
  .videoBar:not(.enableShareScreen) .cell-shareScreen,
  .videoBar:not(.enableCallControl) .callControl
    display none !important